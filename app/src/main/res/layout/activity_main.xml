<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background_white_blue"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0077A6">
            <ImageView
                android:id="@+id/Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/app_icon_general_relativity_circle_cropped" />

            <TextView
                android:id="@+id/custom_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorentz's Factor"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="32dp"
                />

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="24dp">
        <TextView
            android:id="@+id/Calculator"
            style="@style/CategoryStyle"
            android:textColor="#16AFCA"
            android:textSize="52dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:text="Calculator" />
    </FrameLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lorentz_factor"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#16AFCA"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/Quiz"
            style="@style/CategoryStyle"
            android:textColor="@color/white"
            android:textSize="52dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:text="Quiz" />
    </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#006994"
            android:text="With love from Naresh :)"/>
    </LinearLayout>


